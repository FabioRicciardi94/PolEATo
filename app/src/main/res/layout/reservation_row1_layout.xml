<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Name and surname client -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/reservation_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="6dp"
                android:src="@drawable/reservation_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dateLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvDateField"
                app:layout_constraintStart_toEndOf="@id/reservation_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDateField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:singleLine="true"
                android:text="05/04/2019"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/timeLabel"
                app:layout_constraintStart_toEndOf="@id/dateLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/time"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvTimeField"
                app:layout_constraintStart_toEndOf="@id/tvDateField"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTimeField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:singleLine="true"
                android:text="20:30"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/statusLabel"
                app:layout_constraintStart_toEndOf="@id/timeLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:singleLine="true"
                android:text="Status"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvStatusField"
                app:layout_constraintStart_toEndOf="@id/tvTimeField"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStatusField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:singleLine="true"
                android:text="On acceptance"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/statusLabel"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- *********************************************** -->
        <!--                   Dishes section                -->
        <!-- *********************************************** -->

        <!-- Dish 1 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dish_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="6dp"
                android:src="@drawable/dishes_icon"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_name"
                app:layout_constraintEnd_toStartOf="@id/dish_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dish_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="@string/dishes"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_name"
                app:layout_constraintEnd_toStartOf="@id/dish_quantity_label"
                app:layout_constraintStart_toEndOf="@id/dish_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dish_quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/quantity"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dish_name_label"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Content -->


            <!-- to define icon refers to status -->
            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasta carbonara"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_note"
                app:layout_constraintEnd_toStartOf="@id/tv_dish_quantity"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/dish_name_label"
                app:layout_constraintTop_toBottomOf="@id/dish_name_label" />

            <TextView
                android:id="@+id/tv_dish_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="2"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_note"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.21"
                app:layout_constraintStart_toStartOf="@id/dish_quantity_label"
                app:layout_constraintTop_toBottomOf="@id/dish_quantity_label" />

            <!-- Notes about dish -->
            <TextView
                android:id="@+id/dish_note_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_dish_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dish_name" />

            <TextView
                android:id="@+id/tv_dish_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLength="100"
                android:maxLines="3"
                android:text="Senza aglio, cipolla, panna, prezzemolo"
                android:textColor="@color/colorTextNoteField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dish_note_label"
                app:layout_constraintTop_toBottomOf="@id/tv_dish_name" />
        </android.support.constraint.ConstraintLayout>

        <!-- Dish 2 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dish_icon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="6dp"
                android:src="@drawable/dishes_icon"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_name2"
                app:layout_constraintEnd_toStartOf="@id/dish_name_label2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dish_name_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="@string/dishes"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_name2"
                app:layout_constraintEnd_toStartOf="@id/dish_quantity_label2"
                app:layout_constraintStart_toEndOf="@id/dish_icon2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dish_quantity_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/quantity"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_quantity2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dish_name_label2"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Content -->


            <!-- to define icon refers to status -->
            <TextView
                android:id="@+id/tv_dish_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza margherita"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_note2"
                app:layout_constraintEnd_toStartOf="@id/tv_dish_quantity2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/dish_name_label2"
                app:layout_constraintTop_toBottomOf="@id/dish_name_label2" />

            <TextView
                android:id="@+id/tv_dish_quantity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="1"
                android:textColor="@color/colorTextSubField"
                app:layout_constraintBottom_toTopOf="@id/tv_dish_note2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.21"
                app:layout_constraintStart_toStartOf="@id/dish_quantity_label2"
                app:layout_constraintTop_toBottomOf="@id/dish_quantity_label2" />

            <!-- Notes about dish -->
            <TextView
                android:id="@+id/dish_note_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/colorTextField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_dish_name2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dish_name2" />

            <TextView
                android:id="@+id/tv_dish_note2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLength="100"
                android:maxLines="3"
                android:text="Pizza tagliata, per favore"
                android:textColor="@color/colorTextNoteField"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dish_note_label2"
                app:layout_constraintTop_toBottomOf="@id/tv_dish_name2" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>